#
# Dynamic Load Balance Library Makefile for machine dependent directories
#

ifndef DCC
DCC=$(CC)
endif

DEPS=-M

include $(OBJ_FILES:.o=.d)

ifdef MAIN_OBJ
include $(MAIN_OBJ:.o=.d)
endif

%.o:	%.c
	@echo "Compiling $<..."
	@$(CC) $(DEFS) -c $<
%.d:	%.c
	@echo "(Re)Building dependency for $<..."
	@$(SHELL) -ec '$(DCC) $(DEPS) $(DEFS) $< | sed '\''s/$*.o/& $@/g'\'' > $@'

$(LIB_NAME):	$(OBJ_FILES:.o=.d) $(OBJ_FILES)
		@echo "creating library..."
		@$(AR) $(LIB_NAME) $(OBJ_FILES)
		@$(RANLIB) $(LIB_NAME)

$(TARGET):	$(LIB_NAME) $(MAIN_OBJ:.o=.d) $(MAIN_OBJ)
		@echo "linking driver"
		@$(CC) $(MAIN_OBJ) -o $(TARGET) $(LNK_LIBS)

